# =============================================================================
# Voice AI Receptionist - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/<your-project>/settings/api

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# -----------------------------------------------------------------------------
# Vapi Configuration
# -----------------------------------------------------------------------------
# Get these from: https://dashboard.vapi.ai/settings

VAPI_API_KEY=vapi_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VAPI_ASSISTANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# -----------------------------------------------------------------------------
# n8n Configuration
# -----------------------------------------------------------------------------
# Used for webhook authentication (X-Vapi-Secret header)
# Generate a secure random string: openssl rand -hex 32

N8N_WEBHOOK_SECRET=your-secure-webhook-secret-here

# n8n instance URL (for callback workflows)
N8N_BASE_URL=https://your-n8n-instance.com

# -----------------------------------------------------------------------------
# Twilio Configuration (SMS)
# -----------------------------------------------------------------------------
# Get these from: https://console.twilio.com

TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
# Used as fallback LLM in n8n workflows
# Get from: https://platform.openai.com/api-keys

OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Slack Configuration
# -----------------------------------------------------------------------------
# For alerts and notifications
# Create webhook at: https://api.slack.com/apps > Incoming Webhooks

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# Optional: Specific channel for critical alerts
SLACK_CRITICAL_CHANNEL=#voice-ai-critical
SLACK_GENERAL_CHANNEL=#voice-ai-alerts

# -----------------------------------------------------------------------------
# Restaurant Configuration
# -----------------------------------------------------------------------------
# These values are used in the Voice AI prompts and responses

RESTAURANT_NAME="Your Restaurant Name"
RESTAURANT_PHONE=+1234567890
RESTAURANT_EMAIL=contact@yourrestaurant.com
RESTAURANT_ADDRESS="123 Main Street, City, State 12345"

# Parking information (spoken by AI)
VALET_PRICE=15
FREE_PARKING_LOCATION="5th Avenue"
FREE_PARKING_AFTER="6 PM"

# -----------------------------------------------------------------------------
# Operating Hours (ISO format)
# -----------------------------------------------------------------------------
# Used for booking validation and AI responses

HOURS_TUESDAY_OPEN=17:00
HOURS_TUESDAY_CLOSE=22:00
HOURS_WEDNESDAY_OPEN=17:00
HOURS_WEDNESDAY_CLOSE=22:00
HOURS_THURSDAY_OPEN=17:00
HOURS_THURSDAY_CLOSE=22:00
HOURS_FRIDAY_OPEN=17:00
HOURS_FRIDAY_CLOSE=23:00
HOURS_SATURDAY_OPEN=17:00
HOURS_SATURDAY_CLOSE=23:00
HOURS_SUNDAY_OPEN=16:00
HOURS_SUNDAY_CLOSE=21:00
# Monday is closed

# Last seating offset (minutes before close)
LAST_SEATING_OFFSET=60

# -----------------------------------------------------------------------------
# Business Rules
# -----------------------------------------------------------------------------

# Maximum party size before requiring events coordinator
LARGE_PARTY_THRESHOLD=8

# Maximum party size allowed via AI booking
MAX_PARTY_SIZE=20

# Cancellation policy
CANCELLATION_NOTICE_HOURS=24
NO_SHOW_FEE_PER_PERSON=25
NO_SHOW_FEE_PARTY_THRESHOLD=6

# -----------------------------------------------------------------------------
# Monitoring & Alerts
# -----------------------------------------------------------------------------

# Alert thresholds
ALERT_ERROR_RATE_THRESHOLD=20
ALERT_LATENCY_THRESHOLD_MS=4000
ALERT_COMPLETION_RATE_THRESHOLD=70

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------

NODE_ENV=development
LOG_LEVEL=debug

# Test phone number for integration tests (receives SMS)
TEST_PHONE_NUMBER=+1234567890
